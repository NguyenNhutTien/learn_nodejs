<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="topnav">
      <a class="active" href="/">Home</a>
      <a href="/create-users">Create users</a>
    </div>
    <h2>List users</h2>
    <table>
      <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Name</th>
        <th>City</th>
        <th>Action</th>
      </tr>
      <% listUsers.forEach((user) => { %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= user.city %></td>
        <td>
          <a href="/edit-user/<%= user.id %>">Edit</a>
          <a href="/delete-user/<%= user.id %>">Delete</a>
        </td>
      </tr>
      <% }) %>
    </table>
  </body>
</html>
